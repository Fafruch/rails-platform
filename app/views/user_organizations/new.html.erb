<% if @user_organization.errors.messages.present? %>
    <div class="alert alert-danger">
      <ul>
        <% @user_organization.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<div class="container">
  <h2>Add user to organization</h2>

  <%= form_for @user_organization, url: user_user_organizations_path, html: { method: :post } do |f| %>
      <div class="field">
        <%= f.label 'Organization' %><br>
        <%= f.select :organization_id, @not_user_organizations_hash, {}, class: 'form-control' %><br>
        <br>
      </div>

      <div class="actions">
        <%= f.submit 'Add user to this organization', class: 'btn btn-primary' %>
        <%= link_to 'Cancel', edit_user_path(@user), class: 'btn btn-secondary' %>
      </div>
  <% end %>
</div>