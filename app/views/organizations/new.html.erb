<%= render 'shared/error_messages', object: @organization %>

<div class="container">
  <h2>New organization</h2>

  <%= form_for(@organization) do |f| %>
      <div class="field">
        <%= f.label 'Name' %><br>
        <%= f.text_field :name, class: 'form-control' %><br>
        <%= f.label 'Subdomain' %><br>
        <%= f.text_field :subdomain, class: 'form-control' %><br>
        <br>
      </div>

      <div class="actions">
        <%= f.submit 'Create', class: 'btn btn-primary' %>
        <%= link_to 'Cancel', organizations_path, class: 'btn btn-secondary' %>
      </div>
  <% end %>
</div>