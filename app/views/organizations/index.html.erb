<div class="container">
  <h2>Organizations</h2>
  <ul class="list-group">
    <% @organizations.each do |organization| %>

            <li class="list-group-item">
              <%= organization.name %>
              <ul class="list-group">
                <% organization.users.each do |user| %>
                    <%= link_to user_path(user) do %>
                      <li class="list-group-item">
                        <%= user.first_name %>
                      </li>
                  <% end %>
                <% end %>
              </ul>
            </li>

    <% end %>
  </ul>
</div>