<div class="container">
  <h2>User:</h2>

  ID: <%= @user.id %><br>
  Password: <%= @user.encrypted_password %><br>
  <br>
  First name: <%= @user.first_name %><br>
  Last name: <%= @user.last_name %><br>
  <br>
  E-mail: <%= @user.email %><br>
  Phone number: <%= @user.phone_number %><br>
  <br>
  Role: <%= @user.role %><br>
  <br>

  <% if @user.organizations.empty? %>
    User belongs to no organizations<br>
  <% else %>
      Organizations:<br>
      <ul class="list-group">
        <% @user.organizations.each do |organization| %>
            <li class="list-group-item">
              <%= organization.name %>
            </li>
        <% end %>
      </ul>
  <% end %>
  <br>

  <%= link_to 'Edit user', edit_admin_user_path , class: 'btn btn-primary'%>
  <% unless @user == current_user %>
    <%= link_to 'Delete user', admin_user_path, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %>
  <% end %>
  <%= link_to 'Go back to all users', admin_users_path, class: 'btn btn-secondary' %>

</div>
